<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>

      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>

    <div class='col-md-8 offset-md-1'>
        <h2 class="m-0">Group info</h2>
          <% if current_user == @user %>
            <div class="text-right mb-2">
              <%= link_to "グループを編集", edit_group_path(@group.id),  class: "btn btn-success btn-sm" %>
          <% end%>
          <% if current_user == @user %>
              <%= link_to "グループを削除", group_path(@group.id), method: :delete, class: "btn btn-danger btn-sm", "data-confirm" => "本当に削除しますか？"%>
            </div>
          <% end%>
      <div class="row p-2 border border-dark bg-secondary">
        <div class="col-md-3 mr-4 pl-0">
            <%= image_tag @group.get_group_image, size: "200x150" %>
        </div>
        <div class="col-md-6 p-0">
          <h4 class="text-info font-weight-bold border-bottom border-dark"><%= @group.name %></h4>
          <div>
            <%= @group.introduction %>
          </div>
        </div>
        <div class="col md-4">
          <div class="text-center">
              <%= image_tag @user.get_profile_image, size: "100x100" %>
          </div>
          <p class="text-center">オーナー：<%= @user.name %></p>
        </div>
      </div>
    </div>
  </div>
</div>