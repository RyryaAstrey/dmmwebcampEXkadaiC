<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>

      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Groups</h2>
        <table class="table">
          <thead>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th colspan=""></th>
          </thead>
          <% @groups.each do |group| %>
          <tbody>
            <tr>
              <td><%= link_to group_path(group.id) do %>
                <%= image_tag group.get_group_image, size: '200x100' %>
                <% end %>
              </td>
              <td><%= link_to group.name, group_path(group.id) %></td>
              <td><%= group.introduction %></td>
              <td>メンバー数：<%= group.users.count %>人</td>
              <td><% if current_user == group.owner_id %>
              <%= link_to "Edit", edit_group_path(group.id), class: "btn btn-success" %>
              <%end%></td>
            </tr>
          </tbody>
          <% end %><!--each分のend-->
        </table>
    </div>
  </div>
</div>